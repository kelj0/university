<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- WEB API -->
    <servlet>
        <servlet-name>version</servlet-name>
        <servlet-class>web_api.version</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>version</servlet-name>
        <url-pattern>/api/version</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>get_products</servlet-name>
        <servlet-class>web_api.get_products</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>get_products</servlet-name>
        <url-pattern>/api/get_products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>get_categories</servlet-name>
        <servlet-class>web_api.get_categories</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>get_categories</servlet-name>
        <url-pattern>/api/get_categories</url-pattern>
    </servlet-mapping>


    <!-- WEB PAGE -->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>web_app.home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkout</servlet-name>
        <servlet-class>web_app.checkout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user_mgmt</servlet-name>
        <servlet-class>web_app.user_mgmt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user_mgmt</servlet-name>
        <url-pattern>/user_mgmt</url-pattern>
    </servlet-mapping>

</web-app>