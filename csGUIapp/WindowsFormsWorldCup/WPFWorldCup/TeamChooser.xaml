<Window x:Class="WPFWorldCup.TeamChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFWorldCup"
        mc:Ignorable="d"
        Title="TeamChooser" Height="603" Width="474">
    <Grid>
        <Label x:Name="lbl_chooseTeam" Content="Label" HorizontalAlignment="Left" Margin="205,20,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox x:Name="cb_teams" HorizontalAlignment="Left" Margin="90,85,0,0" VerticalAlignment="Top" Width="158">
            <Grid Height="100" Width="100"/>
        </ComboBox>
        <Button x:Name="btn_applyFavoriteTeam" Content="Button" HorizontalAlignment="Left" Margin="300,85,0,0" VerticalAlignment="Top" Width="75" Click="Btn_applyFavoriteTeam_Click"/>

    </Grid>
</Window>
