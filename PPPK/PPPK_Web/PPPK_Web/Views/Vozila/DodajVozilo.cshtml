@model PPPK_Web.vozilo

@{
    ViewBag.Title = "DodajVozilo";
}

<h2>DodajVozilo</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>vozilo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <fieldset>
                <label class="control-label col-md-2">Tip vozila</label>
                @Html.DropDownList("tipovi_vozila")
            </fieldset>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Marka</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.marka, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.marka, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Godina proizvodnje</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.godina_proizvodnje, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.godina_proizvodnje, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Kilometri</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.pocetni_km, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pocetni_km, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <div onclick="window.location.href= '@Url.Action("Index", "Vozila")'" class="btn btn-danger">Nazad na listu vozila</div>
</div>
